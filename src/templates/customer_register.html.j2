{% extends "base.html.j2" %}

{% block content %}
<h2>Customer Register</h2>

<form action="/customer/register" method="post">
            <label for="register_name">Name:</label><br>
            <input type="text" id="register_name" name="name" required><br><br>

            <label for="register_email">Email:</label><br>
            <input type="email" id="register_email" name="email" required><br><br>

            <label for="register_phone_number">Phone Number:</label><br>
            <input type="text" id="register_phone_number" name="phone_number" required><br><br>

            <!-- Any other fields you need for registration go here -->

            <input type="submit" value="Register">
        </form>
{% endblock %}
