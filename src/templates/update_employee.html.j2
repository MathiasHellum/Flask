{% extends 'base.html.j2' %}

{% block content %}
<h1>Update Employee Details:</h1>

{% if error_message %}
<p class="error">{{ error_message }}</p>
{% endif %}

<form method="post">
  ID: <input name="id"/>
  New Name: <input name="newName"/>
  New Address: <input name="newAddress"/>
  New Branch: <input name="newBranch"/>
  <br/><br/>
  <button type="submit">Update Employee</button>
</form>
{% endblock %}
