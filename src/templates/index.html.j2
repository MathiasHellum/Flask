{% extends 'base.html.j2' %}

{% block content %}
  <h1>Enter your user-name to retrieve information from the database:</h1>
  <form method="post">
    Username: <input name="username"/>
    <br/><br/>
    <button type="submit">Submit</button>
  </form>

  <h1>Information from the database</h1>
  <h1>Username: {{ data['username'] }}</h1><br>
  <h1>Email: {{ data['email'] }}</h1>
{% endblock %}
