{% extends 'base.html.j2' %}

{% block content %}
<h1>Update customer details:</h1>

{% if error_message %}
<p class="error">{{ error_message }}</p>
{% endif %}

<form method="post">
  ID: <input name="id"/>
  Name: <input name="name"/>
  Email: <input name="email"/>
  Phone Number: <input name="phone_number"/>
  <br/><br/>
  <button type="submit">Update</button>
</form>
{% endblock %}
