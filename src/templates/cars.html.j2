<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>{{ data['title'] }}</title>
  </head>
  <body>
<h1>
    List cars:
</h1>
    {% for car in data %}
      <h2>{{ car['make'] }}</h2>
      <p>Model: {{ car['model'] }}</p>
      <p>Year: {{ car['year'] }}</p>
      <p>Location: {{ car['location'] }}</p>
      <p>Status: {{ car['status'] }}</p>
      <form method="post" action="/cars/list/delete">
        <input type="hidden" name="id" value="{{ car['id'] }}">
        <button type="submit">Delete</button>
      </form>
    {% endfor %}
  </body>
</html>
