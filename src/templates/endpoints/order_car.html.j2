{% extends "base.html.j2" %}

{% block content %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="text-center mb-4">
                <h2>Order a Car</h2>
            </div>

            <div class="card">
                <div class="card-body">
                    <form action="/order-car" method="post">
                        <div class="mb-3">
                            <label for="customer" class="form-label">Logged in as:</label>
                            <input type="text" id="customer" name="customer_name" class="form-control" value="{{ selected_customer.name }}" readonly>
                            <input type="hidden" name="customer_id" value="{{ selected_customer.id }}">
                        </div>

                        <div class="mb-3">
                            <label for="car" class="form-label">Select Available Car:</label>
                            <select name="car_id" id="car" class="form-select">
                                {% for car in cars %}
                                    <option value="{{ car.id }}">{{ car.make }} {{ car.model }}</option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Order Car</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
