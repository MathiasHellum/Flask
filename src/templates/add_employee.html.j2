{% extends 'base.html.j2' %}

{% block content %}
<h1>Enter Employee Details:</h1>

{% if error_message %}
<p class="error">{{ error_message }}</p>
{% endif %}

<form method="post">
  Name: <input name="name"/>
  Address: <input name="address"/>
  Branch: <input name="branch"/>
  <br/><br/>
  <button type="submit">Add Employee</button>
</form>
{% endblock %}
